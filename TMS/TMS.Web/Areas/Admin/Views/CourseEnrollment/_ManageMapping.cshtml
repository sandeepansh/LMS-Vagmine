@using Microsoft.AspNetCore.Mvc.Rendering
@using TMS.ViewModels
@using TMS.ViewModels.Masters
@model TMS.ViewModels.Masters.CourseEnrollmentViewModel

@{
    var studentList = ViewBag.StudentList as List<SelectListItem>;
    var studentDetails = ViewBag.StudentDetails as List<UserViewModel>;
}

@* <div class="modal-header">
    <h5 class="modal-title">Manage Student Enrollment</h5>
</div> *@

<div class="modal-body">
    <form id="enrollmentForm" asp-action="SaveMapping" asp-controller="CourseEnrollment">
        <input type="hidden" asp-for="CourseId" />

        <div class="form-group mb-3">
            <label>Course</label>
            <input type="text" class="form-control" value="@ViewBag.CourseName" readonly />
        </div>

        <div class="form-group mb-3">
            <label>Students</label>
            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 50px;">Select</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (studentList != null && studentDetails != null)
                        {
                            foreach (var student in studentList)
                            {
                                var studentObj = studentDetails.FirstOrDefault(s => s.Id == int.Parse(student.Value));
                                <tr>
                                    <td class="text-center">
                                        <input type="checkbox" name="SelectedStudentIds" value="@student.Value" @(student.Selected ? "checked" : "") />
                                    </td>
                                    <td>@studentObj?.Name</td>
                                    <td>@studentObj?.Email</td>
                                    <td>@studentObj?.Role?.Name</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No students available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-end">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>


