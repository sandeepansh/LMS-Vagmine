
@model TMS.ViewModels.Masters.LocationMasterViewModel

@{

    var permissions = ViewContext.HttpContext.GetFormPermissions();

}

<form method="post" class="noclick" id="frmItem" disabled="@(!permissions.Add && !permissions.Edit)">

    <div class="card glass">

        <div class="card-body">

            <input asp-for="Id" type="hidden" />

            <input id="hdAddEditActionAllowed" type="hidden" value="@permissions.CanShowAddEditButton(Model!.Id).ToString().ToLower()" />

            <div class="row mb-2">

                <div class="col-12 col-md-6">

                    <div class="mb-1">

                        <label asp-for="Name"></label>

                        <input asp-for="Name" aria-required="true" placeholder="Enter Name" disabled="@(!permissions.Add && !permissions.Edit)" />

                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>

                </div>

                <div class="col-12 col-md-6">

                    <div class="mb-1">

                        <label asp-for="LocationCode"></label>

                        <input asp-for="LocationCode" aria-required="true" placeholder="Enter Location Code" disabled="@(!permissions.Add && !permissions.Edit)" />

                        <span asp-validation-for="LocationCode" class="text-danger"></span>

                    </div>

                </div>

                <div class="col-12 col-md-6">

                    <div class="mb-1">

                        <label asp-for="Description"></label>

                        <textarea asp-for="Description" aria-required="true" placeholder="Enter Description" disabled="@(!permissions.Add && !permissions.Edit)" rows="4"></textarea>

                        <span asp-validation-for="Description" class="text-danger"></span>

                    </div>

                </div>

            </div>

        </div>

    </div>

</form>