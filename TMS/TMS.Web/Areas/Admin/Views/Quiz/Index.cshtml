@using TMS
@model IEnumerable<TMS.ViewModels.Masters.QuizMasterViewModel>

@{
    ViewData["Title"] = "Quiz Management";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>@ViewData["Title"]</h4>
    <a asp-action="Item" class="btn btn-primary">+ Add New Quiz</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Course</th>
            <th>Quadrant</th>
            <th>Quiz Title</th>
            <th>Questions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Course?.Name</td>
                <td>@quiz.CourseQuadrant?.Name</td>
                <td>@quiz.Title</td>
                <td>@(quiz.Questions?.Count ?? 0)</td>
                <td>
                    <a asp-action="Item" asp-route-iId="@quiz.Id.Encrypt()" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
