@model IEnumerable<TMS.ViewModels.Academics.CourseMeetingViewModel>

@{
    ViewData["Title"] = "Academic Calendar";
    Layout = "_Layout";
}

<!-- ✅ CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.css" rel="stylesheet" />

<style>
    .calendar-container {
        display: flex;
        gap: 1rem;
        background-color: #f9fafb;
        border-radius: 12px;
        padding: 1rem;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .event-list {
        flex: 0 0 320px;
        background: #fff;
        border-radius: 10px;
        padding: 1rem;
        overflow-y: auto;
        max-height: 700px;
    }

    .calendar-box {
        flex: 1;
        background: #fff;
        border-radius: 10px;
        padding: 1rem;
    }

    .event-item {
        border-left: 5px solid #0d6efd;
        padding-left: 10px;
        margin-bottom: 1rem;
    }

        .event-item small {
            color: #666;
        }

    .event-title {
        font-weight: 600;
    }

    /* 🟦 FullCalendar Event Styling */
    .fc-event-title {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
        display: block;
    }
</style>

<div class="calendar-container">
    <!-- ✅ Event List -->
    <div class="event-list">
        <h5><strong>Upcoming Virtual Classes</strong></h5>
        <hr />

        @if (!Model.Any())
        {
            <div class="alert alert-info">No scheduled classes yet.</div>
        }
        else
        {
            foreach (var item in Model.OrderBy(m => m.ScheduledAt))
            {
                <div class="event-item">
                    <small>@item.ScheduledAt.ToString("dd MMM yyyy hh:mm tt")</small><br />
                    <div class="event-title">@item.MeetingTitle</div>
                    <div class="text-muted">
                        @item.CourseName (@item.Duration mins)
                    </div>
                    @if (!string.IsNullOrEmpty(item.MeetingUrl))
                    {
                        <div class="mt-1">
                            <a href="@item.MeetingUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                Join Meeting
                            </a>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <!-- ✅ Calendar -->
    <div class="calendar-box">
        <div id="calendar"></div>
    </div>
</div>

<!-- ✅ JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');

        // ✅ Prepare events from model
        var events = [
            @foreach (var item in Model)
            {
                    <text>
                    {
                        title: '@item.MeetingTitle.Replace("'", "\\'")',
                        start: '@item.ScheduledAt.ToString("yyyy-MM-ddTHH:mm:ss")',
                        url: '@item.MeetingUrl',
                        color: '#0d6efd',
                        extendedProps: {
                            course: '@item.CourseName',
                            duration: '@item.Duration',
                            startTime: '@item.ScheduledAt.ToString("hh:mm tt")'
                        }
                    },
                    </text>
            }
        ];

        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay'
            },
            height: 650,
            events: events,
            nowIndicator: true,
            eventClick: function (info) {
                if (info.event.url) {
                    window.open(info.event.url, '_blank');
                    info.jsEvent.preventDefault();
                }
            },
            eventDidMount: function (info) {
                // ✅ Add Bootstrap tooltip
                var tooltip = new bootstrap.Tooltip(info.el, {
                    title: `<b>${info.event.title}</b><br>${info.event.extendedProps.startTime} | ${info.event.extendedProps.duration} mins`,
                    placement: 'top',
                    trigger: 'hover',
                    container: 'body',
                    html: true
                });
            },
            eventTimeFormat: {
                hour: '2-digit',
                minute: '2-digit',
                meridiem: 'short'
            }
        });

        calendar.render();
    });
</script>
