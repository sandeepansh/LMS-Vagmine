<style>
    /* Scoped to .student-menu-container to prevent leaking styles globally */
    .student-menu-container .student-sidebar {
        width: auto;
        background: #fff;
        border-right: 1px solid #e5e5e5;
        height: 80vh;
        padding-top: 10px;
        font-family: 'Segoe UI', sans-serif;
        font-size: 14px;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: #c5c5c5 #f9f9f9;
    }

        .student-menu-container .student-sidebar::-webkit-scrollbar {
            width: 8px;
        }

        .student-menu-container .student-sidebar::-webkit-scrollbar-track {
            background: #f9f9f9;
        }

        .student-menu-container .student-sidebar::-webkit-scrollbar-thumb {
            background-color: #c5c5c5;
            border-radius: 10px;
        }

        .student-menu-container .student-sidebar ul {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }

        .student-menu-container .student-sidebar li {
            margin-bottom: 4px;
        }

        .student-menu-container .student-sidebar a {
            display: flex;
            align-items: center;
            padding: 8px 14px;
            text-decoration: none;
            color: #333 !important;
            border-radius: 6px;
            transition: all 0.2s ease-in-out;
        }

            .student-menu-container .student-sidebar a i {
                width: 20px;
                text-align: center;
                margin-right: 10px;
                font-size: 15px;
                color: #007bff;
            }

            .student-menu-container .student-sidebar a:hover {
                background: #f1f6ff;
                color: #007bff !important;
                transform: translateX(2px);
            }

            .student-menu-container .student-sidebar a.active {
                background: #e8f0ff;
                color: #007bff !important;
                font-weight: 600;
            }

        .student-menu-container .student-sidebar .menu-title {
            font-size: 13px;
            text-transform: uppercase;
            color: #999;
            font-weight: 700;
            margin: 16px 0 6px 14px;
        }

        .student-menu-container .student-sidebar .menu-section {
            padding-top: 10px;
            border-top: 1px solid #f0f0f0;
            margin-top: 10px;
        }
</style>

<script>
    // Highlight active link only inside this component
    document.querySelectorAll('.student-menu-container .student-sidebar a').forEach(link => {
        if (link.href === window.location.href)
            link.classList.add('active');
    });
</script>
